<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zefu.business.mapper.BusMapDefinitionMapper">
    
    <resultMap type="BusMapDefinition" id="BusMapDefinitionResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="pattern"    column="pattern"    />
        <result property="style"    column="style"    />
        <result property="level"    column="level"    />
        <result property="controller"    column="controller"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectBusMapDefinitionVo">
        select id, name, pattern, style, level, controller, status, create_by, create_time, update_by, update_time, remark from bus_map_definition
    </sql>

    <select id="selectBusMapDefinitionList" parameterType="BusMapDefinition" resultMap="BusMapDefinitionResult">
        <include refid="selectBusMapDefinitionVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="pattern != null  and pattern != ''"> and pattern = #{pattern}</if>
            <if test="style != null  and style != ''"> and style = #{style}</if>
            <if test="level != null "> and level = #{level}</if>
            <if test="controller != null  and controller != ''"> and controller = #{controller}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBusMapDefinitionById" parameterType="Long" resultMap="BusMapDefinitionResult">
        <include refid="selectBusMapDefinitionVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBusMapDefinition" parameterType="BusMapDefinition" useGeneratedKeys="true" keyProperty="id">
        insert into bus_map_definition
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="pattern != null">pattern,</if>
            <if test="style != null">style,</if>
            <if test="level != null">level,</if>
            <if test="controller != null">controller,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="pattern != null">#{pattern},</if>
            <if test="style != null">#{style},</if>
            <if test="level != null">#{level},</if>
            <if test="controller != null">#{controller},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateBusMapDefinition" parameterType="BusMapDefinition">
        update bus_map_definition
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="pattern != null">pattern = #{pattern},</if>
            <if test="style != null">style = #{style},</if>
            <if test="level != null">level = #{level},</if>
            <if test="controller != null">controller = #{controller},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusMapDefinitionById" parameterType="Long">
        delete from bus_map_definition where id = #{id}
    </delete>

    <delete id="deleteBusMapDefinitionByIds" parameterType="String">
        delete from bus_map_definition where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>