        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectBusSceneDefinitionVo">
        select id, name, type, mac_code, parent_id, master_ip, relation_id, address, admin_id, admin_name, status, create_by, create_time, update_by, update_time, remark from bus_scene_definition
    </sql>

    <select id="selectBusSceneDefinitionList" parameterType="BusSceneDefinition" resultMap="BusSceneDefinitionResult">
        <include refid="selectBusSceneDefinitionVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="type != null  and type != ''"> and type = #{type}</if>
            <if test="macCode != null  and macCode != ''"> and mac_code = #{macCode}</if>
            <if test="parentId != null "> and parent_id = #{parentId}</if>
            <if test="masterIp != null  and masterIp != ''"> and master_ip = #{masterIp}</if>
            <if test="relationId != null "> and relation_id = #{relationId}</if>
            <if test="address != null  and address != ''"> and address = #{address}</if>
            <if test="adminId != null "> and admin_id = #{adminId}</if>
            <if test="adminName != null  and adminName != ''"> and admin_name like concat('%', #{adminName}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBusSceneDefinitionById" parameterType="Long" resultMap="BusSceneDefinitionResult">
        <include refid="selectBusSceneDefinitionVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBusSceneDefinition" parameterType="BusSceneDefinition" useGeneratedKeys="true" keyProperty="id">
        insert into bus_scene_definition
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="type != null">type,</if>
            <if test="macCode != null">mac_code,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="masterIp != null">master_ip,</if>
            <if test="relationId != null">relation_id,</if>
            <if test="address != null">address,</if>
            <if test="adminId != null">admin_id,</if>
            <if test="adminName != null">admin_name,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="type != null">#{type},</if>
