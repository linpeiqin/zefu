<mapper namespace="com.zefu.business.mapper.BusSceneDefinitionMapper">
    
    <resultMap type="BusSceneDefinition" id="BusSceneDefinitionResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="type"    column="type"    />
        <result property="macCode"    column="mac_code"    />
        <result property="parentId"    column="parent_id"    />
        <result property="masterIp"    column="master_ip"    />
        <result property="relationId"    column="relation_id"    />
        <result property="address"    column="address"    />
        <result property="adminId"    column="admin_id"    />
        <result property="adminName"    column="admin_name"    />
        <result property="status"    column="status"    />
