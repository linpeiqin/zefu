<mapper namespace="com.zefu.business.mapper.BusSceneEntityMapper">
    
    <resultMap type="BusSceneEntity" id="BusSceneEntityResult">
        <result property="id"    column="id"    />
        <result property="entityPosition"    column="entity_position"    />
        <result property="entityName"    column="entity_name"    />
        <result property="parentId"    column="parent_id"    />
        <result property="sceneId"    column="scene_id"    />
        <result property="entityNo"    column="entity_no"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectBusSceneEntityVo">
        select id, entity_position, entity_name, parent_id, scene_id, entity_no, status, create_by, create_time, update_by, update_time, remark from bus_scene_entity
    </sql>

    <select id="selectBusSceneEntityList" parameterType="BusSceneEntity" resultMap="BusSceneEntityResult">
        <include refid="selectBusSceneEntityVo"/>
        <where>  
            <if test="entityPosition != null  and entityPosition != ''"> and entity_position = #{entityPosition}</if>
            <if test="entityName != null  and entityName != ''"> and entity_name like concat('%', #{entityName}, '%')</if>
            <if test="parentId != null "> and parent_id = #{parentId}</if>
            <if test="sceneId != null "> and scene_id = #{sceneId}</if>
            <if test="entityNo != null  and entityNo != ''"> and entity_no = #{entityNo}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBusSceneEntityById" parameterType="Long" resultMap="BusSceneEntityResult">
        <include refid="selectBusSceneEntityVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBusSceneEntity" parameterType="BusSceneEntity" useGeneratedKeys="true" keyProperty="id">
        insert into bus_scene_entity
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="entityPosition != null">entity_position,</if>
            <if test="entityName != null">entity_name,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="sceneId != null">scene_id,</if>
            <if test="entityNo != null">entity_no,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="entityPosition != null">#{entityPosition},</if>
            <if test="entityName != null">#{entityName},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="sceneId != null">#{sceneId},</if>
            <if test="entityNo != null">#{entityNo},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateBusSceneEntity" parameterType="BusSceneEntity">
        update bus_scene_entity
        <trim prefix="SET" suffixOverrides=",">
            <if test="entityPosition != null">entity_position = #{entityPosition},</if>
            <if test="entityName != null">entity_name = #{entityName},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="sceneId != null">scene_id = #{sceneId},</if>
            <if test="entityNo != null">entity_no = #{entityNo},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusSceneEntityById" parameterType="Long">
        delete from bus_scene_entity where id = #{id}
    </delete>

    <delete id="deleteBusSceneEntityByIds" parameterType="String">
        delete from bus_scene_entity where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>