        </where>
    </select>
    
    <select id="selectBusCommandOptionById" parameterType="Long" resultMap="BusCommandOptionResult">
        <include refid="selectBusCommandOptionVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBusCommandOption" parameterType="BusCommandOption" useGeneratedKeys="true" keyProperty="id">
