    <select id="selectBusCommandOptionList" parameterType="BusCommandOption" resultMap="BusCommandOptionResult">
        <include refid="selectBusCommandOptionVo"/>
        <where>  
            <if test="equipmentSelfId != null  and equipmentSelfId != ''"> and equipment_self_id = #{equipmentSelfId}</if>
